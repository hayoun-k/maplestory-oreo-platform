---
import Layout from '../layouts/Layout.astro';
import CharCard from '../components/CharCard.astro';
import { getAllMembers } from '../../lib/storage.js';

// Enable SSR for this page (required for runtime KV access)
export const prerender = false;

// Access the Cloudflare Runtime through Astro.locals
const runtime = Astro.locals.runtime;
let members = [];

try {
  if (runtime?.env?.MEMBERS_KV) {
    // Fetch all registered members from the shared KV namespace
    members = await getAllMembers(runtime.env.MEMBERS_KV);
    
    // Sort members by Level (highest first), then alphabetically
    members.sort((a, b) => {
      if ((b.level || 0) !== (a.level || 0)) {
        return (b.level || 0) - (a.level || 0);
      }
      return a.ign.toLowerCase().localeCompare(b.ign.toLowerCase());
    });
  }
} catch (error) {
  console.error("Failed to load guild roster from KV:", error);
}
---

<Layout title="Oreo Guild Roster">
	<main>
		<div class="header">
			<h1>üè∞ Oreo Guild Roster</h1>
			<p>Showing {members.length} registered members</p>
		</div>

		<div class="roster-grid">
			{members.length > 0 ? (
				members.map((member) => (
					<CharCard 
						name={member.ign} 
						level={member.level || "???"} 
						job={member.job || "Unknown"} 
						imageUrl={member.imageUrl} 
					/>
				))
			) : (
				<div class="empty-state">
					<p>No members found in the directory.</p>
					<p>Use <code>/register [IGN]</code> in Discord to join!</p>
				</div>
			)}
		</div>
	</main>
</Layout>

<style>
	main {
		margin: auto;
		padding: 2rem;
		width: 1000px;
		max-width: calc(100% - 2rem);
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}
	.header {
		text-align: center;
		margin-bottom: 3rem;
	}
	h1 {
		font-size: 3rem;
		font-weight: 700;
		line-height: 1;
		margin-bottom: 0.5em;
	}
	.roster-grid {
		display: grid;
		grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
		gap: 2rem;
	}
	.empty-state {
		grid-column: 1 / -1;
		text-align: center;
		padding: 4rem;
		background: rgba(255, 255, 255, 0.05);
		border-radius: 12px;
	}
	code {
		background: #ff5722;
		padding: 0.2em 0.4em;
		border-radius: 4px;
	}
</style>